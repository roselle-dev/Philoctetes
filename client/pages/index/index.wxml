<!--index.wxml-->
<view class="container">
  <view bindtap="bindViewTap" class="userinfo">

    <view class="userinfo-nickname">你好
      <open-data type="userNickName"></open-data>
    </view>
  </view>
  <view class="content center">
    <text bindtap="opentest" class="content">{{content}}</text>
  </view>
  <view class="usermotto">
    <button bindtap="buyTicket">{{motto}}</button>
  </view>
  <view class="nextBtn" wx:if="{{false}}">
    <button bindtap="makeCharts">制作图表</button>
  </view>
  <view class="nextBtn">
    <button bindtap="storeHouse">我的小仓库</button>
  </view>
</view>
<view class='curtain' style='top:{{curtainTop}}vh;'>
  <image bindtap='closeTap' src='../../images/icons/close.png' mode='scaleToFill' class='curtain-close' style='transform:rotate({{spin}}deg)'></image>
  <picker class="curtain-select" bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
    <view>
      请点击选择选项数：{{array[index]}}
    </view>
  </picker>
  <view class='roundel-container'>
    <view class='roundel'>
      <view class='roundel-bg'>
        <view wx:for="{{triangles}}" class='sectorPiece' style="transform: translate(-50%, 0) rotate({{item.rotate}}deg);border-top-color:{{item.color}}">
        </view>
      </view>

    <image bindtap='closeTap' src='../../images/pic/pointer.png' mode='scaleToFill' class='pointer'></image>
      </view>
  </view>
</view>
<view bindtap='labelTap' class='label' style='top: {{labelTop}}vh;'>
  <image src='../../images/pic/label.png' mode='scaleToFill' class='labelImg'></image>
  <text class='labelText'>转盘</text>
</view>