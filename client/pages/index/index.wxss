/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 80px;
}

.nextBtn {
  margin-top: 40px;
}

.content {
  margin-top: 20px;
  font-size: 12px;
  padding-left: 30px;
  padding-right: 30px;
  text-align: center;
}

.center {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.curtain {
  background-image: linear-gradient(90deg, #ce9ffc 10%, #7367f0 100%);
  width: 100%;
  height: 100%;
  position: absolute;
  transition: all 2s ease-in-out;
}

.label {
  width: 60px;
  height: 60px;
  position: absolute;
  left: 80vw;
  transition: all 2s ease-in-out;
}

.labelImg {
  width: 100%;
  height: 100%;
}

.labelText {
  position: absolute;
  text-align: center;
  top: -10px;
  left: 20px;
  writing-mode: tb-rl;
  height: 60px;
  font-size: 14px;
  color: #069;
}

.certain-close {
  width: 30px;
  height: 30px;
  position: absolute;
  top: 20px;
  right: 20px;
  transition: all 0.2s ease-in-out;
}
