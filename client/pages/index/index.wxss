/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 80px;
}

.nextBtn {
  margin-top: 40px;
}

.content {
  margin-top: 20px;
  font-size: 12px;
  padding-left: 30px;
  padding-right: 30px;
  text-align: center;
}

.center {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.curtain {
  background-image: linear-gradient(90deg, #ce9ffc 10%, #7367f0 100%);
  width: 100%;
  height: 100%;
  position: absolute;
  transition: all 2s ease-in-out;
}

.label {
  width: 60px;
  height: 60px;
  position: absolute;
  left: 80vw;
  transition: all 2s ease-in-out;
}

.labelImg {
  width: 100%;
  height: 100%;
}

.labelText {
  position: absolute;
  text-align: center;
  top: -10px;
  left: 20px;
  writing-mode: tb-rl;
  height: 60px;
  font-size: 14px;
  color: #069;
}

.certain-close {
  width: 30px;
  height: 30px;
  position: absolute;
  top: 20px;
  right: 20px;
  transition: all 0.2s ease-in-out;
}

.curtain-descprition {
  color: #fff;
  font-size: 13px;
  text-align: center;
  margin: 0 30px;
  position: absolute;
  bottom: 20px;
}

.roundel-container {
  border: solid 1px #fff;
  height: 250px;
  position: absolute;
  bottom: 100px;
  width: 100%;
}

.roundel {
  position: relative;
  width: 250px;
  height: 250px;
  /* border-radius: 50%; */
  overflow: hidden;
  margin: auto;
  background-color: rgba(231, 247, 255, 0);
}

.roundel-bg {
    position: relative;
    width: 250px;
    height: 250px;
    border-radius: 50%;
    overflow: hidden;
    margin: auto;
}

.sectorPiece {
    transform: translate(-50%, 0) rotate(3deg);
    transform-origin: center;
    position: absolute;
    top: 0;
    left: 50%;
    width: 0;
    height: 0;
    border: 125px solid transparent;
    border-left-width: 13.138029408209557813937797517485px;
    border-right-width: 13.138029408209557813937797517485px;
    border-top-color: #8AEBDC;
    transition: all 1s ease-in-out;
}
