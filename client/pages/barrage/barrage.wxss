/* pages/barrage/barrage.wxss */
.container{
  background: #000000;
  display: flex;
  justify-content: center;
  border: 0;
  width: 100%;
  height: 100%;
}
.textline{
  transform: rotate(90deg);
  color: #FFF;
  overflow: visible;
  width: 5000px;
  text-align: center;
}
page{
  height: 100%;
  width: 100%;
}
.bottomMenu{
  width: 100%;
  height: 200px;
  position: absolute;
  background: #FFF;
  transition: all 1s ease-in-out;
}
.textInput{
  border: solid 1px #EEE;
  display: inline-block;
  position:relative;
  top:6px; 
}
.colorInput{
  border: solid 1px #EEE;
  display: inline-block;
  position:relative;
  top:6px; 
}
.formPd{
  padding: 4px 0 5px 15px;
}
.sizeSlider{
  display:inline-block;
  width:80%;
  position:relative;
  top:-6px; 
}
.buttons{
  border-top: solid 1px #CCC;
  display: flex;
  align-items: flex-start;
  padding-top: 5px;
}
.buttonleft{
  width:374rpx;
  text-align:center;
  border-right: solid 1px #CCC;
}
.buttonright{
  width:374rpx;
  text-align:center;
}
.colorchoose{
  width:20px;
  height:20px;
  border-radius: 20px;
  display:inline-block;
  margin-left: 20px;
}